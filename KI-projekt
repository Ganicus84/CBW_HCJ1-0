<body>

<h1>KI-Zukunftsnavigator</h1>

<div id="interessen">
    <div class="interesse" data-interesse="karriere">Karriere</div>
    <div class="interesse" data-interesse="gesundheit">Gesundheit</div>
    <div class="interesse" data-interesse="kunst">Kunst</div>
</div>

<div id="ergebnisse"></div>

<script>
// JavaScript-Interaktivität
const interessen = document.querySelectorAll('.interesse');
const ergebnisseDiv = document.getElementById('ergebnisse');

interessen.forEach(interesse => {
    interesse.addEventListener('click', () => {
        const interesseText = interesse.dataset.interesse;
        ergebnisseDiv.innerHTML = `<h2>KI und ${interesseText}</h2>`;
        // Hier würden Sie normalerweise Inhalte basierend auf dem gewählten Interesse laden.
    });
});
</script>

</body>
